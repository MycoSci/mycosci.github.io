---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="BlueFrog Analytics">
  <!-- Hero Section -->
  <section class="py-5 bg-light text-center text-dark">
    <div class="container">
      <h1 class="display-4 fw-bold">
        Every Second Counts—Dominate Your Market
      </h1>
      <p class="lead">
        Eliminate anxiety with instant clarity. Discover your hidden risks and
        actionable opportunities now.
      </p>
      <a class="btn btn-lg btn-primary mt-3" href="#"
        >Get Your Free Diagnostic Scan</a
      >
      <p class="text-muted small mt-2">
        No credit card required. Cancel anytime.
      </p>
    </div>
  </section>

  <!-- Benefits Overview -->
  <section class="py-5 text-dark">
    <div class="container text-center">
      <div class="row">
        <div class="col-md-4">
          <h3>Instant Clarity</h3>
          <p>See what's working and what's holding you back immediately.</p>
        </div>
        <div class="col-md-4">
          <h3>Competitive Edge</h3>
          <p>
            Stay ahead of competitors who are already optimizing their
            strategies.
          </p>
        </div>
        <div class="col-md-4">
          <h3>Continuous Growth</h3>
          <p>Clear insights for sustained digital success.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-5 bg-light text-dark">
    <div class="container">
      <h2 class="text-center">How It Works</h2>
      <div class="row mt-4">
        <div class="col-md-4">
          <h5>1. Sign Up Quickly</h5>
          <p>Immediate access, no lengthy forms.</p>
        </div>
        <div class="col-md-4">
          <h5>2. Instant Diagnostic</h5>
          <p>
            Get real-time visibility of your site's analytics and compliance.
          </p>
        </div>
        <div class="col-md-4">
          <h5>3. Take Clear Action</h5>
          <p>Step-by-step guidance tailored to your results.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Proof & Authority -->
  <section class="py-5 text-center text-dark">
    <div class="container">
      <h2>Trusted by Market Leaders</h2>
      <p class="text-muted">
        "Transformed our strategy overnight—indispensable." - MarketWatch
      </p>
    </div>
  </section>

  <!-- Pricing Transparency -->
  <section class="py-5 bg-light text-dark">
    <div class="container text-center">
      <h2>Simple, Transparent Pricing</h2>
      <p>
        Two weeks completely free. Then just $100/month for unlimited insights.
      </p>
      <a class="btn btn-primary btn-lg" href="#">Start Your Free Trial Now</a>
      <p class="text-muted small mt-2">No hidden fees. Cancel anytime.</p>
    </div>
  </section>
</MainLayout>
